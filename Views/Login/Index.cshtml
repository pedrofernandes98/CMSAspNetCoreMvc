@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutLogin";
}

<div class="text-center">
    <div class="row mb-4">
        <div class="col d-flex justify-content-center">
            <form action="/login/auth" method="post">
            
                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example1">E-mail</label>
                    <input type="email" id="form2Example1" class="form-control" required="required" placeholder="Digite o e-mail" name="email"/>
                </div>

                <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example2">Senha</label>
                    <input type="password" id="form2Example2" class="form-control" required="required" placeholder="Digite a senha" name="senha"/>
                </div>

                @if(!string.IsNullOrEmpty(ViewBag.MsgError))
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.MsgError
                    </div>
                }
                
                <input type="submit" class="btn btn-primary btn-block mb-4" value="Entrar" />
            </form>
        </div>
    </div>
</div>
